@model LoginUserDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Otel Admin Giriş Paneli</title>
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <link href="~/adminweb/css/style.css" rel="stylesheet">
    <style>
        /* Genel Arka Plan */
        body {
            background: url('~/adminweb/assets/images/hotel_background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
        }

        /* Preloader */
        #preloader {
            position: fixed;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(255, 255, 255, 0.7);
            z-index: 9999;
        }

        .loader {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        /* Giriş Paneli */
        .login-form-bg {
            background-color: rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
        }

        .login-form .card {
            border-radius: 15px;
            border: none;
            background: rgba(255, 255, 255, 0.8);
        }

        .card-body {
            padding: 40px;
        }

        .login-form__footer {
            color: #dcdcdc;
        }

            .login-form__footer a {
                color: #3498db;
                font-weight: bold;
            }

        h4 {
            font-size: 32px;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 20px;
        }

        .form-control {
            background-color: #ecf0f1;
            border: 1px solid #bdc3c7;
            border-radius: 5px;
            color: #34495e;
            height: 50px;
        }

        .btn {
            background-color: #3498db;
            color: white;
            font-weight: bold;
            border-radius: 50px;
            padding: 15px;
            text-transform: uppercase;
            cursor: pointer;
            border: none;
        }

            .btn:hover {
                background-color: #2980b9;
                transition: 0.3s;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group input {
                height: 50px;
                border-radius: 10px;
            }

        .text-center {
            color: #2c3e50;
            font-size: 24px;
        }

        /* Footer */
        .login-form__footer {
            font-size: 14px;
            margin-top: 20px;
        }
    </style>
</head>

<body class="h-100">

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->

    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <a class="text-center" href="index.html">
                                    <h4>Otel Admin Giriş Paneli</h4>
                                </a>

                                <form class="mt-5 mb-5 login-input" method="post">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Kullanıcı Adınız" asp-for="Username">
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Şifreniz" asp-for="Password">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <button class="btn login-form__btn submit w-100">Giriş Yap</button>
                                </form>
                                <p class="mt-5 login-form__footer">Bir Hesabın Yok mu? <a href="/Register/Index/" class="text-primary">Kayıt Ol</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>
</body>

</html>
